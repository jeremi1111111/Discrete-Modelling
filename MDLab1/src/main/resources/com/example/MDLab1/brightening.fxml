<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MDLab1.BrighteningController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="image1" fitHeight="330.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </ImageView>
            <ImageView fx:id="image2" fitHeight="330.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
      <ImageView fx:id="image3" fitHeight="330.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="600.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#onBackButtonClick" text="Back">
               <HBox.margin>
                  <Insets right="80.0" />
               </HBox.margin>
            </Button>
            <Slider fx:id="slider" majorTickUnit="5.0" max="20.0" prefHeight="34.0" prefWidth="300.0" showTickLabels="true" />
            <Button fx:id="applyButton" mnemonicParsing="false" onMouseClicked="#onApplyButtonClick" text="Apply">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
