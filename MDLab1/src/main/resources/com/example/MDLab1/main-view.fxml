<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="420.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MDLab1.MainViewController">
   <children>
      <ImageView fx:id="imageView" fitHeight="330.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button fx:id="dimmingButton" mnemonicParsing="false" onMouseClicked="#onDimmingButtonClick" text="Dimming" />
            <Button fx:id="brighteningButton" mnemonicParsing="false" onMouseClicked="#onBrighteningButtonClick" text="Brightening" />
            <Button fx:id="binarizationButton" mnemonicParsing="false" onMouseClicked="#onBinarizationButtonClick" text="Binarization" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
